<p id="notice"><%= notice %></p>

<h1>行事</h1>

<table>
  <thead>
    <tr>
      <th>Community</th>
      <th>Name</th>
      <th>Event start at</th>
      <th>Event end at</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.community_id %></td>
        <td><%= event.name %></td>
        <td><%= event.event_start_at %></td>
        <td><%= event.event_end_at %></td>
        <td><%= event.place %></td>
        <td><%= link_to '詳細', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '破棄', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '行事作成', new_event_path %>
