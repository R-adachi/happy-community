<p>
  <h1>ホームページ</h1>
</p>

  <p>
    <%= image_tag @user.picture.thumb.url, size: '60x60', 
    style: "border-radius:50%; background:url(@user.picture_url); " if @user.picture? %>
    <%= @user.name %>
 
    <%= link_to  'プロフィール編集', edit_user_path(current_user), class: 'btn btn-default' %>
    <%= link_to 'コミュニティ検索', communities_path(current_user), class: 'btn btn-default' %>
  </p>
  <p>行事</p>
  <% @events.each do |event| %>
    <p><%= event.name %> <%= link_to '詳細', event %></p>
  <% end %>
  
  <p><%= link_to 'コミュニティ作成', new_community_path ,class: 'btn btn-default'%></p>
  <% @communities.each do |community| %>
    <p><%= community.name %> <%= link_to 'チャット', controller: 'chat_messages', action: 'index', community_id: community.id, user_id: current_user.id %></p>
  <% end %>
